    <select id="list" parameterType="com.example.hforum.po.NewsVo" resultMap="NewsVoResultMap">
        select n.*,c.channel_id,c.channel_name
        from news n
        left outer join news_channel nc
        on  n.news_id = nc.nid
        left outer join channel c
        on c.channel_id=nc.cid
        where 1=1
        order by   n.news_id desc
